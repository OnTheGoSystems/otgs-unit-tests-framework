{
  "name": "otgs/unit-tests-framework",
  "description": "A framework to build unit tests with OTGS products",
  "keywords": [
    "phpunit"
  ],
  "homepage": "https://git.onthegosystems.com/shared/otgs-unit-tests-framework",
  "type": "library",
  "license": "GPL-2.0",
  "authors": [
    {
      "name": "Andrea Sciamanna",
      "email": "andrea.s@icanlocalize.com",
      "homepage": "http://wpml.org"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "roave/security-advisories": "dev-latest",
    "10up/wp_mock": "^0.4",
    "lucatume/function-mocker": "^1.3",
    "symfony/dom-crawler": "^5.0",
    "symfony/css-selector": "^5.0",
    "phpunit/phpunit": "^7.5"
  },
  "autoload": {
    "classmap": [
      "phpunit/otgs-testcase.php",
      "phpunit/Mocks",
      "phpunit/stubs"
    ]
  }
}
